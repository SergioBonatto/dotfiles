[module/previous]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo ""
click-left = "spotifyctl -q previous"


[module/next]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo ""
click-left = "spotifyctl -q next"


[module/playpause]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; Playing
hook-1 = echo ""
; Paused
hook-2 = echo ""
click-left = "spotifyctl -q playpause"


[module/spotify]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing/paused show song name and artist
hook-1 = spotifyctl -q status --format '%artist%: %title%' --max-length 40 --max-title-length 25 --max-artist-length 15 --trunc '...'

[module/caffeine]
type = custom/ipc
hook-0 = echo   #Use a Nerd or FontAwesome icon for the off state
hook-1 = echo   #Use a Nerd or FontAwesome icon for the on state
click-left = /usr/local/bin/caffeine
initial = 1
format-foreground = ${color.background}
format-background = ${color.alert}

[module/cmus]
type = custom/script

exec = ~/.config/polybar/polybar-cmus/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --next
click-right = cmus-remote --prev
click-middle = cmus-remote --pause
scroll-up = cmus-remote --volume +5%
scroll-down = cmus-remote --volume -5%

label-font = 3
format = <label>
# format-underline = ${colors.foreground-alt}
label = %output%
label-maxlen = 50
